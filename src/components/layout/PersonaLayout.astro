---
import "../../styles/globals.css";
import SideNav from "./SideNav.astro";
import TopBar from "./TopBar.astro";

interface Props {
	title: string;
	mode?: "red" | "blue" | "yellow" | "purple";
}

const { title, mode = "red" } = Astro.props;
---

<html lang="en" class="overflow-hidden">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-BVVWLE3PV5"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-BVVWLE3PV5");
		</script>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/svg+xml"
			href={`${import.meta.env.BASE_URL}/favicon.svg`}
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Phantom Portfolio</title>
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@400;700;900&family=JetBrains+Mono:wght@400;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class={`bg-persona-black text-persona-white font-ui selection:bg-persona-accent selection:text-white theme-${mode} overflow-hidden`}
	>
		<div class="fixed inset-0 flex bg-persona-black overflow-hidden">
			<SideNav mode={mode} />

			<div class="flex-1 flex flex-col relative z-10 min-w-0">
				<TopBar title={title} mode={mode} />
				<main
					class="flex-1 overflow-y-auto overflow-x-hidden p-8 perspective-1000 relative scrollbar-thin scrollbar-thumb-persona-accent scrollbar-track-black"
				>
					<!-- Background texture placeholder if needed -->
					<!-- Noise Texture Overlay -->
					<div
						class="fixed inset-0 pointer-events-none z-50 mix-blend-overlay opacity-20"
						style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3Csvg%3E&quot;);"
					>
					</div>
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>
