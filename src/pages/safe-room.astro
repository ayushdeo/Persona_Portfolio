---
import PersonaLayout from "../components/layout/PersonaLayout.astro";
import PageTransition from "../components/motion/PageTransition";
import PersonaButton from "../components/ui/PersonaButton";
import MaskReveal from "../components/ui/MaskReveal";
import USCOverlay from "../components/ui/USCOverlay.astro";
---

<PersonaLayout title="SAFE ROOM" mode="red">
    <USCOverlay />
    <PageTransition client:load>
        <div
            class="flex flex-col items-center justify-start pt-4 pb-[50vh] px-16 relative"
        >
            <div
                class="max-w-4xl w-full bg-persona-black/90 border-2 border-persona-accent p-10 md:p-20 relative backdrop-blur-sm shadow-[10px_10px_0px_theme('colors.persona.accent')] transform -skew-x-2"
            >
                <MaskReveal client:visible>
                    <h2
                        class="text-5xl font-display text-white mb-8 border-b-2 border-gray-700 pb-4"
                    >
                        MISSION BRIEFING
                    </h2>
                </MaskReveal>

                <div
                    class="space-y-6 text-lg text-gray-300 font-ui leading-relaxed"
                >
