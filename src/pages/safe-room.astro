                        <!-- NMIMS -->
                        <div
                            class="bg-gray-900/50 p-6 border-l-4 border-gray-600"
                        >
                            <h4 class="text-white font-bold text-xl">
                                NMIMS UNIVERSITY
                            </h4>
                            <p class="text-white font-bold">
                                BACHELOR OF TECHNOLOGY ‚Äî IT
                            </p>
                            <div class="flex justify-between items-center mb-4">
                                <p class="text-gray-400 text-sm">
                                    SEP 2021 ‚Äî MAY 2025
                                </p>
                                <p
                                    class="text-white font-mono text-sm border border-white px-2"
                                >
                                    CGPA: 3.62 / 4.0
                                </p>
                            </div>

                            <p
                                class="text-xs text-gray-500 uppercase font-bold mb-2"
                            >
                                HONORS
                            </p>
                            <ul class="text-gray-300 text-sm space-y-1">
