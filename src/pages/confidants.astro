---
import PersonaLayout from "../components/layout/PersonaLayout.astro";
import PageTransition from "../components/motion/PageTransition";
import ConfidantDeck from "../components/ui/ConfidantDeck";
---

<PersonaLayout title="CONFIDANTS" mode="yellow">
    <PageTransition client:load>
        <div
            class="min-h-screen flex flex-col md:flex-row items-start relative"
        >
            <!-- LEFT PANEL: Scrollable Context & Research -->
            <div
                class="w-full md:w-5/12 min-h-screen px-8 md:px-12 pt-0 md:pt-4 pb-8 md:pb-12 space-y-[40vh] relative z-20 bg-persona-black border-r-4 border-persona-white"
            >
                <!-- SECTION 1: Social Links Intro (Default) -->
                <div class="min-h-[80vh] flex flex-col justify-center">
                    <h2
                        class="text-6xl md:text-8xl font-display text-white mb-6 leading-[0.85] tracking-tighter"
                    >
                        SOCIAL<br /><span class="text-persona-yellow"
                            >LINKS</span
                        >
                    </h2>

                    <p
                        class="font-ui text-lg text-gray-300 max-w-md leading-relaxed border-l-4 border-persona-yellow pl-6 mb-8"
                    >
                        Professional alliances and operational bonds forged
                        through real-world missions. Each link represents a role
                        executed under pressure, across scale, ambiguity, and
                        impact.
                    </p>

                    <div
                        class="animate-bounce mt-10 text-persona-yellow font-ui font-black text-xl tracking-widest opacity-80"
                    >
                        ▼ SCROLL / CLICK
                    </div>
                </div>

                <!-- SECTION 2: Research Archives (Scroll State) -->
                <div class="min-h-screen py-20 relative">
                    <!-- Sticky Header with Fade Mask -->
                    <div
                        class="sticky top-0 bg-persona-black z-40 py-6 border-b-2 border-dashed border-gray-700 mb-12 shadow-[0_10px_30px_rgba(0,0,0,1)]"
                    >
                        <!-- Top Gradient Mask to hide scrolling items above -->
                        <div
                            class="absolute -top-10 left-0 w-full h-10 bg-persona-black"
                        >
                        </div>

                        <div
                            class="absolute -bottom-8 left-0 w-full h-8 bg-gradient-to-b from-persona-black to-transparent pointer-events-none"
                        >
                        </div>
                        <h2
                            class="text-5xl md:text-6xl font-display text-white relative z-50"
                        >
                            RESEARCH ARCHIVES
                        </h2>
                        <p
                            class="font-ui text-sm text-gray-400 mt-2 relative z-50"
                        >
                            Peer-reviewed investigations and applied research
                            missions.
                        </p>
                    </div>

                    <div class="space-y-8">
                        <!-- 01 -->
                        <a href="#" class="block group">
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">01</span> — SENTIMENT-AWARE
                                AI
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Bridging AI and Branding: Enhancing Consumer
                                Engagement
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                Under Review
                            </p>
                        </a>

                        <!-- 02 -->
                        <a href="#" class="block group">
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">02</span> — LLM
                                BIAS ANALYSIS
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Unveiling Biases via Proactive Detection in
                                GPT-4o-mini
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                International Springer Conference Paper
                            </p>
                        </a>

                        <!-- 03 -->
                        <a href="#" class="block group">
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">03</span> — DEEPFAKE
                                DETECTION
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Unified Deepfake Detection Model to Mitigate
                                Business Risk
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                International Springer Conference Paper
                            </p>
                        </a>

                        <!-- 04 -->
                        <a
                            href="https://doi.org/10.1007/978-981-96-3352-4_23"
                            target="_blank"
                            class="block group"
                        >
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">04</span> — RAILWAY
                                OPTIMIZATION
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Deep Learning Based ICT Model for Wait-Listed
                                Tickets
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                DOI: 10.1007/978-981-96-3352-4_23
                            </p>
                        </a>

                        <!-- 05 -->
                        <div class="block group cursor-default">
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">05</span> — SENTIMENT
                                + BUSINESS ANALYTICS
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Examining McDonald's Operational Strategies
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                Presented at PAN IIM 2023
                            </p>
                        </div>

                        <!-- 06 -->
                        <a
                            href="https://doi.org/10.1007/978-3-031-56586-1_27"
                            target="_blank"
                            class="block group"
                        >
                            <h3
                                class="text-persona-yellow font-display text-2xl group-hover:translate-x-2 transition-transform"
                            >
                                <span class="font-mono text-white">06</span> — IT
                                SECTOR SUSTAINABILITY
                            </h3>
                            <p class="text-white font-bold text-sm mt-1">
                                Empirical Analysis of Growth of the IT Sector in
                                India
                            </p>
                            <p
                                class="text-gray-500 text-xs font-mono uppercase tracking-wide mt-1"
                            >
                                DOI: 10.1007/978-3-031-56586-1_27
                            </p>
                        </a>
                    </div>

                    <div
                        class="mt-12 text-xs font-mono text-gray-500 border-t border-gray-800 pt-4"
                    >
                        6 Publications · Peer Reviewed · Multidisciplinary
                    </div>
                </div>
            </div>

            <!-- RIGHT PANEL: Fixed Confidant Deck -->
            <div
                class="hidden md:block w-7/12 sticky top-0 h-screen relative group-wrapper"
            >
                <!-- Background Layer (Full Bleed to cover Layout Padding) -->
                <div
                    class="absolute -top-8 -right-8 -bottom-8 left-0 bg-gray-900 bg-[radial-gradient(#333333_1px,transparent_1px)] bg-[length:16px_16px] border-l-4 border-persona-accent -z-0"
                >
                </div>

                <!-- Content Container -->
                <div
                    class="w-full h-full flex items-center justify-center px-12 pt-16 pb-32 relative z-10"
                >
                    <ConfidantDeck client:load />
                </div>

                <!-- Decoration -->
                <div
                    class="absolute bottom-28 right-10 text-right opacity-50 pointer-events-none z-10"
                >
                    <h3 class="font-display text-4xl text-gray-800 uppercase">
                        PROFESSIONAL<br />OPERATIONS
                    </h3>
                </div>
            </div>
        </div>
    </PageTransition>
</PersonaLayout>
